<h1><%= Project %></h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Title:</strong></td>
      <td><%= @project.title.humanize %></td>
    </tr>
    <tr>
      <td><strong>Description:</strong></td>
      <td><%= @project.description %></td>
    </tr>
    <tr>
      <td><strong>Status:</strong></td>
      <td><%= @project.status.humanize %></td>
    </tr>
    <tr>
      <td><strong>Start Date:</strong></td>
      <td><%= @project.start_date %></td>
    </tr>
    <tr>
      <td><strong>Cost:</strong></td>
      <td><%= @project.cost %></td>
    </tr>
    <tr>
      <td><strong>Client:</strong></td>
      <td><%= @project.client.name%></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_project_path(@project), class: "btn btn-primary btn-md" unless current_user.user? %>
<%= link_to 'Back', projects_path, class: "btn btn-info btn-md" %>

<% unless current_user.user? %>
  <h1>Payments</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Amount</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @project.payments.each do |payment| %>
          <tr>
            <td><%= payment.amount %></td>
            <td><%= payment.date %></td>
            <td>
              <%= link_to(edit_project_payment_path(@project, payment), remote: true, class: "btn btn-info btn-md"){icon_of('glyphicon-edit')} if current_user.manager? %>
              <%= render 'dialog' %>
              <%= link_to(project_payment_path(@project, payment), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md"){icon_of('glyphicon-trash')} if current_user.admin? %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
