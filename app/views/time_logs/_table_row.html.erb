<tr>
  <td><%= timelog.hours %></td>
  <td><%= timelog.date %></td>
  <td>
    <%= link_to(edit_project_payment_path(timelog.project, timelog), remote: true, class: "btn btn-info btn-md"){icon_of('glyphicon-edit')} if current_user.user? %>
    <%= link_to(project_payment_path(timelog.project, timelog), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md"){icon_of('glyphicon-trash')} if current_user.user? %>
  </td>
</tr>
