<tr>
  <td><%= payment.amount %></td>
  <td><%= payment.date %></td>
  <td>
    <%= link_to(edit_project_payment_path(payment.project, payment), remote: true, class: "btn btn-info btn-md"){icon_of('glyphicon-edit')} if current_user.manager? %>
    <%= link_to(project_payment_path(payment.project, payment), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md"){icon_of('glyphicon-trash')} if current_user.admin? %>
  </td>
</tr>
