<%= form_with(model: [@project, @timelog], remote: true, html: { role: "form" }) do |form| %>
  <%= render 'layouts/errors', object: @timelog %>

  <div class="form-group">
    <%= form.label :hours %>
    <%= form.number_field :hours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <div class='input-group date datepicker'>
      <%= form.text_field :date, class: "form-control" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
