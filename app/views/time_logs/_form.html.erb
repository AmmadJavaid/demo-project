<%= form_with(model: [@project, @timelog], remote: true, html: { role: "form" }) do |form| %>
  <%= render 'layouts/errors', object: @timelog %>

  <div class="form-group">
    <%= form.label :hours %>
    <%= form.number_field :hours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
