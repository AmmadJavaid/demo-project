<%= form_with(model: [@project,@payment], remote: true, html: { role: "form" } ) do |form| %>
  <%= render 'layouts/errors', object: @payment %>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, id: :payment_amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, id: :payment_date, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
