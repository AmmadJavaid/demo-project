<%= form_tag(clients_path, method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search' %>
<% end %>

<h1>Clients</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Location</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.email %></td>
          <td><%= client.location %></td>
          <td>
            <%= link_to(client_path(client), class: "btn btn-info btn-md"){icon_of('glyphicon-eye-open')} %>
            <%= link_to(edit_client_path(client), class: "btn btn-info btn-md"){icon_of('glyphicon-edit')} unless current_user.user? %>
            <%= link_to(client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md"){icon_of('glyphicon-trash')} if current_user.admin? %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Client', new_client_path, class: "btn btn-primary" unless current_user.user? %>
