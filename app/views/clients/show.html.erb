<p>
  <strong>First name:</strong>
  <%= @client.first_name.humanize %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @client.last_name.humanize %>
</p>

<p>
  <strong>Email:</strong>
  <%= @client.email %>
</p>

<p>
  <strong>Location:</strong>
  <%= @client.location %>
</p>
<%= link_to 'Edit', edit_client_path(@client), class: "btn btn-primary", unless current_user.user? %>
<%= link_to 'Back', clients_path, class: "btn btn-info" %>

<h1>Projects</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
         <th>Start Date</th>
        <th>Status</th>
        <th>Cost</th>
      </tr>
    </thead>

    <tbody>
      <% @client.projects.each do |project| %>
        <tr>
          <td><%= project.title.humanize %></td>
          <td><%= project.description %></td>
          <td><%= project.start_date %></td>
          <td><%= project.status.humanize %></td>
          <td><%= project.cost %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
