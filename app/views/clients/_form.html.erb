<%= form_with(model: @client, local: true) do |form| %>
  <%= render 'layouts/errors', object: @client %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :client_first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :client_last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :client_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, id: :client_location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
