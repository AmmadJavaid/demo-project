<%= paginate @users %>
<%= form_tag(admin_users_path, method: :get) do %>
  <%= text_field_tag :search, nil, placeholder: "search", class: "search" %>
<% end %>

<h2>Users</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Role</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.user_name %></td>
          <td><%= user.email %></td>
          <td><%= user.status.humanize %></td>
          <td><%= user.role.humanize %></td>
          <td>
            <div>
              <%= link_to user.get_toggled_status, update_status_admin_user_path(user), method: :patch, class: status_class(user.status) %>
              <%= link_to user.get_toggled_role, update_role_admin_user_path(user), method: :patch, class: role_class(user) %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
